<h1>Burgers</h1>

<div class="burgers">

  <div class="devoured-false">
    <ol>
      {{#each burger}}
        {{#unless devoured }}
          <li>{{this.burger_name}} <button id={{this.id}} class="devour-btn">Devour it!</button></li>
        {{/unless}}
      {{/each}}
    </ol>
  </div>


  <div class="devoured-true">
    <ol>
      {{#each burger}}
        {{#if devoured }}
      <span>
        <li>{{this.burger_name}}</li>
      </span>
        {{/if}}
      {{/each}}
    </ol>
  </div>
</div>


  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <input type="form" id="burger-name">
      <br>
    </div>
    <br>
    <button type="submit">Add Burger</button>
  </form>

